<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewProduct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:src="@drawable/cake1" />

    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageViewProduct"
        android:layout_marginTop="16dp"
        android:text="Naziv proizvoda"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProductName"
        android:layout_toEndOf="@id/imageViewProduct"
        android:layout_marginTop="8dp"
        android:text="KoliÄina: 0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewQuantity"
        android:layout_toEndOf="@id/imageViewProduct"
        android:layout_marginTop="8dp"
        android:text="Cena: $0.00"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnIncreaseQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPrice"
        android:layout_toEndOf="@id/imageViewProduct"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:text="+" />

    <Button
        android:id="@+id/btnDecreaseQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPrice"
        android:layout_toEndOf="@id/btnIncreaseQuantity"
        android:layout_marginTop="8dp"
        android:text="-" />

</RelativeLayout>

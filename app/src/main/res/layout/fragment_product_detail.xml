<!-- fragment_product_detail.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp">

    <ImageView
        android:id="@+id/imageViewProductDetail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cake1" />

    <TextView
        android:id="@+id/textViewProductNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewProductDetail"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:text="Naziv proizvoda" />

    <!-- Dodajte ostale detalje o proizvodu prema potrebi -->

</RelativeLayout>
